<div class="row mt-5 mb-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">請輸入您的支出</h1>
      <form action="/" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">名稱 *</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            value="{{name}}"
          />
        </div>
        <div class="mb-3">
          <label for="date" class="mb-2">日期 *</label>
          <input
            type="date"
            id="date"
            name="date"
            class="form-control"
            value="{{date}}"
          />
        </div>
        <div class="mb-3">
          <label for="categoryid" class="mb-2">類別 *</label>
          <select class="form-select" id="category" name="category">
            <option value="1">家居物業</option>
            <option value="2">交通出行</option>
            <option value="3">休閒娛樂</option>
            <option value="4">餐飲食品</option>
            <option value="5">其他</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="amount" class="mb-2">金額 *</label>
          <input
            type="number"
            id="amount"
            name="amount"
            value="{{amount}}"
            class="form-control"
          />
        </div>
        <button type="submit" class="btn btn-success btn-block">新增支出</button>
      </form>
    </div>
  </div>
</div>