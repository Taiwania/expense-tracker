<div class="row mt-5 mb-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3 mb-3">請輸入您的支出</h1>
      <form action="/" method="POST">
        <div class="mb-3 row">
          <label for="name" class="col-sm-2 col-form-label">名稱 *</label>
          <div class="col-sm-10">
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              value="{{name}}"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="date" class="col-sm-2 col-form-label">日期 *</label>
          <div class="col-sm-10">
            <input
              type="date"
              id="date"
              name="date"
              class="form-control"
              value="{{date}}"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="category" class="col-sm-2 col-form-label">類別 *</label>
          <div class="col-sm-10">
            <select class="form-select" id="category" name="categoryid">
              {{#each categories}}
                <option value="{{this._id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="amount" class="col-sm-2 col-form-label">金額 *</label>
          <div class="col-sm-10">
            <input
              type="number"
              id="amount"
              name="amount"
              value="{{amount}}"
              class="form-control"
            />
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 offset-sm-2">
            <button
              type="submit"
              class="btn btn-success btn-block"
            >新增支出</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>